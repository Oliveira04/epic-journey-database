CREATE TABLE CHARACTER(
    id_character NUMBER PRIMARY KEY,
    name VARCHAR2(100) NOT NULL,
    level NUMBER DEFAULT 1,
    class VARCHAR2(50) NOT NULL,
    load_capacity NUMBER DEFAULT 100 NOT NULL,
    
)

CREATE TABLE ITEM(
    id_item NUMBER PRIMARY KEY,
    name_item VARCHAR2(100) NOT NULL,
    type_item VARCHAR2(50) NOT NULL,
    with NUMBER DEFAULT 1 NOT NULL,
    level_min NUMBER DEFAULT 1 NOT NULL,
    just_mage BOOLEAN DEFAULT FALSE NOT NULL,
    just_warrior BOOLEAN DEFAULT FALSE NOT NULL,
)

CREATE TABLE INVENTORY(
    characterid NUMBER,
    itemid NUMBER,
    CONSTRAINT fk_character 
        FOREIGN KEY (characterid)
        REFERENCES CHARACTER(id_character),
        FOREIGN KEY (itemid)
        REFERENCES ITEM(id_item),
)